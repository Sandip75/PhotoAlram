<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarmRow"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:elevation="2dp"
    android:background="@drawable/rectangle"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:id="@+id/alarmDetails"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alarmtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/imageLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_image_black_48dp"/>
            <TextView
                android:id="@+id/imageUri"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15dip"
                android:layout_below="@id/alarmtime"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/musicLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_notifications_black_48dp"/>
            <TextView
                android:id="@+id/musicUri"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15dip"/>
        </LinearLayout>
        <TextView
            android:id="@+id/daysOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20dip"
            android:textStyle="bold"
            android:layout_below="@+id/alarmtime"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/alarmEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp">
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_delete_black_48dp"
            android:layout_gravity="bottom"
            android:baselineAlignBottom="true"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>
